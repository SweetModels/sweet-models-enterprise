# Environment Variables
# Sweet Models Enterprise - Next.js Web Portal

# ============================================================================
# API Backend (Rust)
# ============================================================================
NEXT_PUBLIC_API_URL=https://sweet-models-enterprise-production.up.railway.app

# ============================================================================
# JWT Security
# ============================================================================
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================================================
# AWS S3 Configuration
# ============================================================================
NEXT_PUBLIC_S3_BUCKET=sweet-models-s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================================================
# NextAuth Configuration
# ============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_here_change_in_production
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_URL_INTERNAL=http://localhost:3000

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
DATABASE_URL=postgres://user:password@localhost:5432/sweet_models

# ============================================================================
# Logging & Monitoring
# ============================================================================
NEXT_PUBLIC_LOG_LEVEL=info
SENTRY_DSN=https://your_sentry_dsn_here

# ============================================================================
# Feature Flags
# ============================================================================
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_AUDIT_LOGS=true
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true

# ============================================================================
# Security Headers (Opcional - pode customizar)
# ============================================================================
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HSTS_MAX_AGE=63072000
