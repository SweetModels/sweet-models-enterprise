# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/sweet_models

# Redis Configuration
REDIS_URL=redis://localhost:6379

# NATS Configuration
NATS_URL=nats://localhost:4222

# JWT Configuration
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OpenAI Configuration (for Phoenix auto-repair agent)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: TLS/HTTPS Configuration
# Uncomment and set paths to enable HTTPS
# TLS_CERT_PATH=cert.pem
# TLS_KEY_PATH=key.pem
# Generate self-signed cert for dev: openssl req -x509 -newkey rsa:4096 -nodes -keyout key.pem -out cert.pem -days 365 -subj "/CN=localhost"

# Optional: Server Configuration
# SERVER_HOST=0.0.0.0
# SERVER_PORT=8080

# Optional: Logging Level
# RUST_LOG=info
