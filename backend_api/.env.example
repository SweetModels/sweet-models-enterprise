# EXAMPLE .env FILE - COPY AND FILL WITH REAL VALUES
# This file shows all required environment variables
# DO NOT commit the actual .env file - it contains secrets!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string with credentials
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://sme_user:sme_password@localhost:5432/sme_db

# ============================================================================
# JWT SECURITY (CRITICAL)
# ============================================================================
# Secret key for signing JWT tokens
# Requirements:
# - At least 32 characters long
# - Use strong random characters
# - Change for each environment
# DO NOT use the default value in production!
JWT_SECRET=sweet-models-enterprise-jwt-secret-key-2025-production-ready

# ============================================================================
# AWS S3 CONFIGURATION
# ============================================================================
# AWS credentials for S3 access
# Get from AWS IAM console
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# S3 Bucket names (fallback chain: S3_BUCKET_NAME â†’ AWS_BUCKET_NAME)
S3_BUCKET_NAME=sweet-models-media
AWS_BUCKET_NAME=sweet-models-media

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Logging level: trace, debug, info, warn, error
# Examples: "info", "debug,sqlx=warn,hyper=info"
RUST_LOG=info,sqlx=warn,hyper=info

# Server host (0.0.0.0 for all interfaces, use for deployed apps)
SERVER_HOST=0.0.0.0

# Server port (Railway will override with PORT env var)
SERVER_PORT=3000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins for CORS
# Supports wildcards: http://localhost:*, https://*.example.com
ALLOWED_ORIGINS=http://localhost:*,http://127.0.0.1:*

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
# Maximum file size in bytes (10MB)
MAX_FILE_SIZE=10485760

# Directory for temporary uploads
UPLOAD_DIR=./uploads
